#include<iostream>
using namespace std;
//deletion
int main()
	
	{
				int LA[]={1,2,3,5,7,8};
				int k,n=5;
				int i,j;
				cout<<"The original array elements are:\n";
				
				for(i=0;i<n;i++){
		cout<<"LA["<<i<<"]="<<LA[i]<<endl;
					}
					cout<<"delete:";
					cin>>k;
					j=k;
					
				while(j<n){
					LA[j-1]=LA[j];
					j=j+1;
					}	
					n=n-1;
						
		cout<<"The array elements after deletion:\n";
		for(i=0;i<n;i++){
			cout<<"LA["<<i<<"]="<<LA[i]<<endl;
			}				
					
							//end
							return 0;
							}
